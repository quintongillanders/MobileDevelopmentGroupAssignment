<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#0D8DF4"
    tools:context=".ProductAdminLoginActivity">

    <TextView
        android:id="@+id/welcomeProductAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Product Admin"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/email_Padmin_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email: "
        android:textStyle="bold"
        android:textColor="@color/white"
        android:inputType="textPersonName"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/pass_admin_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password: "
        android:textStyle="bold"
        android:textColor="@color/white"
        android:inputType="textPersonName"
        android:textSize="25sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="25sp"
        android:id="@+id/btnProductAdminLogin"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="25sp"
        android:id="@+id/btnBack"/>

</LinearLayout>