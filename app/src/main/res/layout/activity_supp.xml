<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#aeb3bf"
    tools:context=".Supp">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/btn_suplogout"
        android:onClick="logoutsup"
        android:layout_margin="10dp"
        android:fontFamily="@font/monobold"
        android:backgroundTint="#d1a736"
        android:textColor="#545454"/>


    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:hint="Type Item Name"
        android:id="@+id/edt_item"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/olort"
        android:textColorHint="#21252e"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Item Quantity"
        android:id="@+id/edt_quantity"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/olort"
        android:textColorHint="#21252e"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Add Item"
        android:id="@+id/btn_add"
        android:onClick="addItem"
        android:textSize="20sp"
        android:fontFamily="@font/monobold"
        android:backgroundTint="#d1a736"
        android:textColor="#545454"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Delete Item"
        android:id="@+id/btn_deleteall"
        android:onClick="deleteItems"
        android:textSize="20sp"
        android:fontFamily="@font/monobold"
        android:backgroundTint="#d1a736"
        android:textColor="#545454"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_view">




    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>