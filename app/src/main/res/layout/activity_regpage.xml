<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0D8DF4"
    tools:context=".REGpage">


    <EditText
        android:id="@+id/edtfullnameReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtemailaddReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email address"
        android:inputType="textPersonName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtdobReg"
        android:inputType="textPersonName"
        android:hint="Date Of Birth"/>

    <EditText
        android:id="@+id/edtpassReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPersonName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtphnoReg"
        android:inputType="textPersonName"
        android:hint="Phone Number"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtaddressReg"
        android:inputType="textPersonName"
        android:hint="Address"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnregisterReg"
        android:text="Register"/>

    <Button
        android:id="@+id/btnloginReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back To Login" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtdisplayRegInfo"/>

</LinearLayout>