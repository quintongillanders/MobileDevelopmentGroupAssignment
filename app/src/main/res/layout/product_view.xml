<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/product_iv_image"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_tv_name"
        android:layout_toEndOf="@+id/product_iv_image"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:text="Product Name:"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_tv_description"
        android:layout_toEndOf="@+id/product_iv_image"
        android:layout_below="@+id/product_tv_name"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:text="Description:"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_tv_price"
        android:layout_toEndOf="@+id/product_iv_image"
        android:layout_below="@+id/product_tv_description"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:text="Price:"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/product_iv_image"
        android:layout_below="@+id/product_tv_price"
        android:text="Add To Cart"
        android:id="@+id/product_btn_add"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/product_btn_add"
        android:layout_marginTop="10dp"
        android:background="#DAD8D8"/>

</RelativeLayout>