<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#aeb3bf"
    tools:context=".SupplierActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/btn_suplogout"
        android:onClick="logoutsup"
        android:layout_margin="10dp"
        android:fontFamily="@font/monobold"
        android:backgroundTint="#d1a736"
        android:textColor="#545454"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Welcome Supplier"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_margin="45dp"
        android:fontFamily="@font/monobold"
        android:textColor="#21252e"
        />

    <Button
        android:id="@+id/overviewBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Product Overview"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="@font/monobold"
        android:backgroundTint="#d1a736"
        android:textColor="#545454"
        />

    <Button
        android:id="@+id/addProdBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="@font/monobold"
        android:backgroundTint="#d1a736"
        android:textColor="#545454"
        />

    <Button
        android:id="@+id/mangProdBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Manage Products"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="@font/monobold"
        android:backgroundTint="#d1a736"
        android:textColor="#545454"
        />

</LinearLayout>